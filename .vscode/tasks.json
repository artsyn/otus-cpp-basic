{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "Ninja", // или "Visual Studio 16 2019" для использования MSVC
                "-DCMAKE_PREFIX_PATH=C:/Qt/5.15.2/msvc2019_64/lib/cmake", // замените на путь к вашей установке Qt
                "-B", "build",
                "."
            ],
            "group": "build"
        },
        {
               "label": "Build",
               "type": "shell",
               "command": "cmake",
               "args": [
                   "--build",
                   "build"
               ],
               "group": {
                   "kind": "build",
                   "isDefault": true
               },
               "dependsOn": [
                   "Configure"
               ]
           }
       ]
   }

